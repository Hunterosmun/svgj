{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM.Iterable", "WebWorker", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": "./",
    "downlevelIteration": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "typeRoots": ["types"],
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "test/simple.spec.js"]
}
